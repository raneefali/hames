<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hames.bean" default-access="field">

    <class name="Customer" table="customer">
        <id name="customerId" column="id">
            <generator class="native"/>
        </id>

        <property name="firstName" column="first_name" not-null="true"/>
        <property name="middleName" column="middle_name" />
        <property name="lastName" column="last_name" />
        <property name="phoneNumber" column="phoneNumber" />
        <property name="mobileNumber" column="mobileNumber" />
        <property name="emailId" column="emailId" />
        <property name="permanentAddress" column="permanentAddress" />
        <property name="temporaryAddress" column="temporaryAddress" />
        <property name="status" column="status" not-null="true" />
        
        <property name="dateCreated" column="date_created" />
        <property name="dateModified" column="date_modified" />
        
        <property name="staffCreated" column="staff_created" />
        <property name="staffModified" column="staff_modified" />
        
    </class>

</hibernate-mapping>