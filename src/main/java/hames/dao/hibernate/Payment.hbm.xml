<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hames.bean" default-access="field">
	<class name="Payment" table="payment">
		<id name="paymentId" column="payment_id">
            <generator class="identity"/>
        </id>
        
       <property name="paymentAmount" column="payment_amount" not-null="true"  type="java.math.BigDecimal" />
       <property name="paymentDate" column="payment_date" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime"/>
        
	</class>
</hibernate-mapping>